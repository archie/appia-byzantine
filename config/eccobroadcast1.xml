<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE appia PUBLIC "-//DTDName//DTD//EN"
	"../xml/appiaxml.dtd">
<appia>
	<template name="ecco_t">
		<session name="tcp_s" sharing="global">
			<protocol>net.sf.appia.protocols.tcpcomplete.TcpCompleteLayer</protocol>
		</session>
		<session name="ecco_s" sharing="private">
			<protocol>net.sf.appia.protocols.echobroadcast.EchoBroadcastLayer</protocol>
		</session>
	</template>
	<channel name="ecco_c" template="ecco_t" initialized="yes">
		<chsession name="ecco_s">
			<parameter name="localport">4000</parameter>
			<parameter name="remotehost1">localhost:4001</parameter>
			<parameter name="remotehost2">localhost:4002</parameter>
		</chsession>
	</channel>
</appia>
